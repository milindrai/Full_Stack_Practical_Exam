<%- include('../layouts/main') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3><%= vehicle.vehicleName %></h3>
                    <div>
                        <a href="/vehicles/<%= vehicle._id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/vehicles/<%= vehicle._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <img src="<%= vehicle.image %>" class="img-fluid rounded" alt="<%= vehicle.vehicleName %>">
                    </div>
                    <div class="col-md-6">
                        <h5 class="card-title">Details</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Brand:</strong> <%= vehicle.brand %>
                            </li>
                            <li class="list-group-item">
                                <strong>Price:</strong> $<%= vehicle.price %>
                            </li>
                            <li class="list-group-item">
                                <strong>Description:</strong><br>
                                <%= vehicle.desc %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/vehicles" class="btn btn-secondary">Back to Vehicles</a>
            </div>
        </div>
    </div>
</div> 